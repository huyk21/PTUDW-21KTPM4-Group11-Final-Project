<main>

  <div class="container">

    <div class="container mt-3">

      <!-- Modal them Quan-->
      <div
        class="modal fade"
        id="themPhuong"
        tabindex="-1"
        role="dialog"
        aria-labelledby="themPhuongLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h4 class="modal-title" id="themPhuongLabel">Thêm phường</h4>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <!-- Your form goes here -->
              <form>
                <div class="form-group">
                  <label for="formThemPhuong">
                    <h6>Tên phường</h6>
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="formThemPhuong"
                    placeholder="Nhập tên phường (vd: phường 5)"
                  />
                </div>

                <button
                  type="button"
                  class="btn btn-secondary float-right mt-3"
                  data-dismiss="modal"
                >Hủy</button>
                <button
                  type="submit"
                  class="btn btn-primary float-right mt-3 mr-1"
                  data-dismiss="modal"
                >Thêm</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div
        class="modal fade"
        id="chinhSuaPhuong"
        tabindex="-1"
        role="dialog"
        aria-labelledby="chinhSuaPhuongLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h4 class="modal-title" id="chinhSuaPhuongLabel">Chỉnh sửa phường</h4>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <!-- Your form goes here -->
              <form>
                <div class="form-group">
                  <label for="formChinhSuaPhuong">
                    <h6>Tên phường</h6>
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="formChinhSuaPhuong"
                    placeholder="Nhập tên phường (vd: Phường 5)"
                  />
                </div>

                <button
                  type="button"
                  class="btn btn-secondary float-right mt-3"
                  data-dismiss="modal"
                >Hủy</button>
                <button
                  type="submit"
                  class="btn btn-primary float-right mt-3 mr-1"
                  data-dismiss="modal"
                >Thêm</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <table class="table table-bordered">
      <h2 class="text-center">Danh sách Phường của {{district.name}}</h2>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-success float-right mb-2"
        data-toggle="modal"
        data-target="#themPhuong"
      >
        <i class="bi bi-person-plus"></i>
        Thêm
      </button>
      <thead class="custom-header">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Tên phường</th>
          <th scope="col">Số lượng điểm đặt</th>
          <th scope="col">Chi tiết</th>
        </tr>
      </thead>
      <tbody>
        {{#each wards}}
          <tr>
            <td scope="row">{{showIndex @index}}</td>
            <td>{{this.name}}</td>
            <td>25</td>
            <!--Calculate the number of ad locations to put here-->
            <td>
              <a href="/api/sovhtt/danh-sach-diem-dat/{{this._id}}">Chi tiết
                <i class="bi bi-info-circle"></i></a>
            </td>
            <td>
              <a href="#" class="pe-auto">
                <i class="bi bi-trash-fill float-end text-danger pe-auto"></i>
              </a>
            </td>
            <td>
              <a
                href="#"
                class="text-secondary float-end pe-auto"
                data-toggle="modal"
                data-target="#chinhSuaPhuong"
              >
                <i class="bi bi-pencil-square"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</main>