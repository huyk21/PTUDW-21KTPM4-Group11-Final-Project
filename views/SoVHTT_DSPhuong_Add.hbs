<main>

  <div class="container">

    <table class="table table-bordered">
      <h2 class="text-center">Danh sách Phường của {{district.name}}</h2>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-success float-right mb-2"
        id="openThemPhuongModalBtn"
        data-bs-toggle="modal"
        data-bs-target="#themPhuong"
      >
        <i class="bi bi-person-plus"></i>
        Thêm
      </button>
      <thead class="custom-header">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Tên phường</th>
          <th scope="col">Số lượng điểm đặt</th>
          <th scope="col">Chi tiết</th>
        </tr>
      </thead>
      <tbody>
        {{#each wards}}
          <tr>
            <td scope="row">{{showIndex @index}}</td>
            <td>{{this.name}}</td>
            <td>{{this.numberOfLocations}}</td>
            <!--Calculate the number of ad locations to put here-->
            <td>
              <a href="/api/sovhtt/danh-sach-diem-dat/{{this._id}}">Chi tiết
                <i class="bi bi-info-circle"></i></a>
            </td>
            <td>
              <a
                href="#"
                class="pe-auto"
                data-toggle="modal"
                data-target="#xoaPhuongModal"
                data-wardId="{{this._id}}"
                data-districtId="{{this.districtID}}"
              >
                <i class="bi bi-trash-fill float-end text-danger pe-auto"></i>
              </a>
            </td>
            <td>
              <a
                href="#"
                class="text-secondary float-end pe-auto"
                data-toggle="modal"
                data-target="#chinhSuaPhuong"
              >
                <i class="bi bi-pencil-square"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Modal them Phuong-->
  <div
    class="modal fade"
    id="themPhuong"
    tabindex="-1"
    role="dialog"
    aria-labelledby="themPhuongLabel"
    aria-hidden="true"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
  >
    <div
      class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg"
      role="document"
    >
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h4 class="modal-title" id="themPhuongLabel">Thêm phường</h4>
          <button
            type="button"
            class="btn-close"
            data-dismiss="modal"
            aria-label="Close"
          >
          </button>
        </div>
        <div class="modal-body">
          <!-- Your form goes here -->
          <form
            id="addWardForm"
            method="POST"
            action="/api/sovhtt/danh-sach-phuong/{{district._id}}"
          >
            <div class="mb-3">
              <label for="wardName">
                <h6>Tên phường</h6>
              </label>
              <input
                type="text"
                class="form-control"
                id="wardName"
                name="wardName"
                placeholder="Nhập tên phường (vd: Phường 5)"
              />
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary float-right mt-3"
            onclick="window.location.href='/api/sovhtt/danh-sach-phuong/{{district._id}}'"
            id="closeBtnThemPhuong"
          >Hủy</button>
          <button
            type="submit"
            id="submitBtnThemPhuong"
            class="btn btn-primary float-right mt-3 mr-1"
            form="addWardForm"
          >Thêm</button>
        </div>
      </div>
    </div>
  </div>

</main>