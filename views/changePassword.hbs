<main>
  <section class="vh-100">
    <div class="container-fluid h-100">
      <div class="row d-flex align-items-center justify-content-center">
        <div
          class="d-flex flex-column justify-content-between col-lg-5 col-xl-5 vh-100 bg-primary"
        >
          <div class="title">
            <h1 class="py-5 display-5 text-center fw-bold text-white">
              Ads Management
            </h1>
            <h1 class="display-5 text-center fw-bold text-white">
              Hệ thống quản lý quảng cáo TP.HCM
            </h1>
          </div>
          <div class="bottom">
            <p class="text-center fs-3">
              <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i
                class="bi bi-star-fill"
              ></i><i class="bi bi-star-fill"></i><i
                class="bi bi-star-fill"
              ></i>
            </p>
            <p class="text-white fw-bold text-end">
              Ứng dụng được phát triển và quản lý bởi Sở Văn hóa - Thể thao
              Thành phố Hồ Chí Minh
            </p>
            <p class="text-white fw-bold text-center">
              Copyright
              <i class="bi bi-c-circle"></i>
              2023-2033 DCS HCM City. All rights reserved.
            </p>
          </div>
        </div>

        <div class="col-md-7 col-lg-7 col-xl-7 bg-white vh-100">
          <h1 class="px-3 display-5 fw-bold text-black" id="greet">
            Đổi mật khẩu
          </h1>

          <div class="form-elements">
            {{! <form method="get" id="login" onsubmit="directUser(event)"> }}
            <form id="changePassword" action="/api/changePassword" method="POST">
              <!-- Account input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="email">Địa chỉ email</label>
                <input
                  name="email"
                  type="email"
                  id="email"
                  class="form-control form-control-lg"
                  placeholder="Vui lòng nhập email của cán bộ"
                  required
                />
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="password">Mật khẩu mới</label>
                <input
                  name="password"
                  type="password"
                  id="password"
                  class="form-control form-control-lg"
                  placeholder="Nhập mật khẩu"
                  required
                />
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="passwordConfirm">Xác nhận mật khẩu</label>
                <input
                  name="passwordConfirm"
                  type="password"
                  id="passwordConfirm"
                  class="form-control form-control-lg"
                  placeholder="Nhập lại mật khẩu"
                  required
                />
              </div>

              <div
                class="d-flex justify-content-between align-items-center mb-4"
              >
                <a href="/api/auth">Quay về trang đăng nhập</a>
              </div>
              <!-- Submit button -->
              <button
                type="submit"
                class="btn btn-primary btn-lg btn-block"
                form="changePassword"
                id="submitButton"
              >
                Tạo lại mật khẩu
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</main>