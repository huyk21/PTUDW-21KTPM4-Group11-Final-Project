    <table class="table table-bordered">
      <h2 class="text-center">Danh sách hình thức báo cáo</h2>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-success float-right mb-2"
        data-toggle="modal"
        data-target="#themHinhThuc"
      >
        <i class="bi bi-plus-square"></i>
        Thêm
      </button>
      <thead class="custom-header">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Tên hình thức báo cáo</th>
          <th scope="col">Thao tác</th>
        </tr>
      </thead>
      <tbody>
        {{#each uniqueReportFormat}}
          <tr>
            <td scope="row">{{showIndex @index}}</td>
            <td>{{this}}</td>
            <td>
              <button class="btn">
                <i class="bi bi-trash-fill text-danger"></i>
              </button>
              <button
                class="btn"
                data-toggle="modal"
                data-target="#chinhSuaHinhThuc"
              >
