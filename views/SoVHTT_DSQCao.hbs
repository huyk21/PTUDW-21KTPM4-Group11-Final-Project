<main>

  <div class="container">

    <table class="table table-bordered">
      <h2 class="text-center">Danh sách bảng quảng cáo</h2>
      <!-- Button trigger modal -->
      <a
        class="btn btn-success float-right mb-2"
        id="add"
        name="add"
        href="/api/sovhtt/danh-sach-quang-cao/{{location._id}}/addAdboard"
        role="button"
      >
        <i class="bi bi-person-plus"></i>
        Thêm
      </a>
      <thead class="custom-header">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Loại bảng</th>
          <th scope="col">Địa chỉ</th>
          <th scope="col">Khu vực</th>
          <th scope="col">Kích thước</th>
          <th scope="col">Hình thức</th>
          <th scope="col">Phân loại</th>
          <th scope="col">Tình trạng</th>
          <th scope="col">Vị trí</th>
          <th scope="col">Hình ảnh</th>
          <th scope="col">Thao tác</th>
        </tr>
      </thead>
      <tbody>
        {{#each adboards}}
          <tr>
            <td scope="row">{{showIndex @index}}</td>
            <td>{{this.properties.boardType}}</td>
            <td>{{this.location.address}}</td>
            <td>{{this.ward.name}} - {{this.district.name}}</td>
            <td>{{this.properties.size}}</td>
            <td>{{this.location.adFormat}}</td>
            <td>{{this.location.locationType}}</td>
            <td>{{this.location.status}}</td>
            <td> <a href="">Chi tiết</a></td>
            <td> <a href="">Xem</a></td>
            <td>
              <a
                href="#"
                class="pe-auto"
                data-toggle="modal"
                data-target="#xoaQuangCaoModal"
                data-locationid="{{this.location._id}}"
                data-adboardid="{{this._id}}"
              >
                <i class="bi bi-trash-fill float-end text-danger pe-auto"></i>
              </a>
            </td>
            <td>
              <a
                name="edit"
                href="/api/sovhtt/danh-sach-quang-cao/{{location._id}}/editAdboard/{{this._id}}"
                class="text-secondary float-end pe-auto"
                {{! data-toggle="modal"
                data-target="#chinhSuaQuan" }}
                id="edit"
                role="button"
              >
                <i class="bi bi-pencil-square"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{! Form xóa quảng cáo }}
  <form name="delete-adboard-form" method="POST"></form>

  {{! Modal xóa quảng cáo }}
  <div id="xoaQuangCaoModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Xóa quảng cáo?</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Bạn chắc chắn muốn xóa quảng cáo này?</p>
        </div>
        <div class="modal-footer">
          <button
            id="btn-delete-adboard"
            type="button"
            class="btn btn-danger"
          >Xóa bỏ</button>
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >Hủy</button>
        </div>
      </div>
    </div>
  </div>

</main>