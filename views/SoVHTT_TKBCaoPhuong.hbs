<main>
  <div class="container">

    <div class="container mt-3">
      <!-- Modal hien thi chi tiet bao cao-->
      <div
        class="modal fade"
        id="hienChiTiet"
        tabindex="-1"
        role="dialog"
        aria-labelledby="hienChiTietLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h4 class="modal-title" id="hienChiTietLabel">Chi tiết báo cáo</h4>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="col-md-6">
                  <!-- Left side of the split body -->
                  <div class="container">
                    <h5>Về việc {{report.reportFormat}}</h5>
                    <p>{{report.reportDetails}}
                    </p>
                  </div>
                </div>
                <div class="col-md-6 border-left">
                  <!-- Right side of the split body with vertical line -->
                  <div class="container">
                    <h5>Hình ảnh đính kèm: </h5>
                    <img
                      src="/billboard.jpg"
                      class="img-fluid mb-1"
                      alt="image not found"
                    />
                  </div>
                </div>

              </div>
            </div>

            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary float-right mt-3"
                data-dismiss="modal"
              >Hủy</button>
            </div>

          </div>
        </div>
      </div>
    </div>

    <table class="table table-bordered">
      <h2 class="text-center">Thống kê báo cáo của người dân trong khu vực
        {{ward.name}},
        {{district.name}}</h2>
      <!-- Button trigger modal -->
      <button type="button" class="btn bg-opacity-0 float-right mb-2">
        <i class="bi bi-funnel"></i>
        Lọc
      </button>

      <thead class="custom-header">
        <tr>
          <th scope="col" class="text-center align-middle">#</th>
          <th scope="col" class="text-center align-middle">Thời điểm gửi</th>
          <th scope="col" class="text-center align-middle">Họ tên người gửi</th>
          <th scope="col" class="text-center align-middle">Email người gửi</th>
          <th scope="col" class="text-center align-middle">SĐT người gửi</th>
          <th scope="col" class="text-center align-middle">Điểm/Bảng</th>
          <th scope="col" class="text-center align-middle">Loại hình báo cáo</th>
          <th scope="col" class="text-center align-middle">Chi tiết</th>
          <th scope="col" class="text-center align-middle">Cách thức xử lí</th>

        </tr>
      </thead>
      <tbody>
        {{#each report}}
          <tr>
            <td scope="row">{{report._id}}</td>
            <td>{{report.reportDate}}</td>
            <td>{{report.reporter}}</td>
            <td>{{report.email}}</td>
            <td>{{report.phoneNo}}</td>
            <td>{{report.location}}</td>
            <td>{{report.reportFormat}}</td>
            <td>
              <button
                class="btn"
                data-toggle="modal"
                data-target="#hienChiTiet"
              >
                <i class="bi bi-info-circle text-secondary"></i>
                Xem
              </button>
            </td>
            <td>{{reportsolution.method}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</main>