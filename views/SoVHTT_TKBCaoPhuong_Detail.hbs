<main>
  <div class="container">

    <table class="table table-bordered">
      <h2 class="text-center">Thống kê báo cáo của người dân trong khu vực
        {{ward.name}}
        -
        {{district.name}}</h2>
      <!-- Button trigger modal -->
      <button type="button" class="btn bg-opacity-0 float-right mb-2">
        <i class="bi bi-funnel"></i>
        Lọc
      </button>

      <thead class="custom-header">
        <tr>
          <th scope="col" class="text-center align-middle">#</th>
          <th scope="col" class="text-center align-middle">Thời điểm gửi</th>
          <th scope="col" class="text-center align-middle">Họ tên người gửi</th>
          <th scope="col" class="text-center align-middle">Email người gửi</th>
          <th scope="col" class="text-center align-middle">SĐT người gửi</th>
          <th scope="col" class="text-center align-middle">Điểm/Bảng</th>
          <th scope="col" class="text-center align-middle">Loại hình báo cáo</th>
          <th scope="col" class="text-center align-middle">Chi tiết</th>
          <th scope="col" class="text-center align-middle">Cách thức xử lí</th>

        </tr>
      </thead>
      <tbody>
        {{#each reports}}
          <tr>
            <td scope="row">{{showIndex @index}}</td>
            <td>{{this.reportDate}}</td>
            <td>{{this.reporter}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNo}}</td>
            <td>{{this.locationDetail.address}}</td>
            <td>{{this.reportFormat}}</td>
            <td>{{this.reportSolutionDetail.method}}</td>
            <td>
              <a
                name="detail"
                href="/api/sovhtt/thong-ke-bao-cao-phuong/{{this._id}}"
                class="text-secondary float-end pe-auto"
                id="openDetailReportModalBtn"
                role="button"
                data-bs-toggle="modal"
                data-bs-target="#chiTietBaoCao"
              >
                <i class="bi bi-info-circle text-secondary"></i>
                Xem
              </a>
            </td>

          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Modal chinh sua Quan-->
  <div
    class="modal fade"
    id="chiTietBaoCao"
    tabindex="-1"
    role="dialog"
    aria-labelledby="chiTietBaoCaoLabel"
    aria-hidden="true"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
  >
    <div
      class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg"
      role="document"
    >
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h4 class="modal-title" id="chiTietBaoCaoLabel">Chi tiết báo cáo</h4>
          <button
            type="button"
            class="btn-close"
            data-dismiss="modal"
            aria-label="Close"
          >
            {{! <span aria-hidden="true">&times;</span> }}
          </button>
        </div>
        <div class="modal-body">
          <!-- Your form goes here -->
          <div class="row">
            <div class="col-md-6">
              <!-- Left side of the split body -->
              <div class="container">
                <h5>Về việc: {{currentReport.reportFormat}}</h5>
                <p>{{currentReport.reportDetails}}
                </p>
              </div>
            </div>
            <div class="col-md-6 border-left">
              <!-- Right side of the split body with vertical line -->
              <div class="container">
                <h5>Hình ảnh đính kèm: </h5>
                <img
                  src="/assets/img/billboard.jpg"
                  class="img-fluid mb-1"
                  alt="image not found"
                />
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary float-right mt-3"
            onclick="window.location.href='/api/sovhtt/thong-ke-bao-cao-phuong/{{ward._id}}'"
            id="closeBtnChinhSuaQuan"
          >Đóng</button>
        </div>
      </div>
    </div>
  </div>

</main>