<main>

  <div class="container">

    <div class="container mt-3">
      <!-- Modal them Quang Cao-->
      <div
        class="modal fade"
        id="themQuangCao"
        tabindex="-1"
        role="dialog"
        aria-labelledby="themQuangCaoLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h4 class="modal-title" id="themQuangCaoLabel">Thêm bảng quảng cáo</h4>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <!-- Your form goes here -->
              <form>
                <div class="form-group">
                  <label for="loaiBang" class="mt-auto">
                    <h6>Loại bảng</h6>
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="loaiBang"
                    placeholder="Nhập loại bảng (vd: Trụ/Cụm pano)"
                  />

                  <label for="kichThuoc" class="mt-3">
                    <h6>Kích thước</h6>
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="kichThuoc"
                    placeholder="Nhập kích thước (vd: 2.5m x 10m)"
                  />

                  <label for="hinhAnh" class="mt-3">
                    <h6>Hình Ảnh</h6>
                  </label>
                  <div class="container mt-3 mb-3">
                    <button
                      type="button"
                      class="btn btn-primary float-start"
                      id="hinhAnh"
                    >
                      <i class="bi bi-image"></i>
                      Thêm hình ảnh
                    </button>
                  </div>

                </div>

                <button
                  type="button"
                  class="btn btn-secondary float-right mt-3"
                  data-dismiss="modal"
                >Hủy</button>
                <button
                  type="submit"
                  class="btn btn-primary float-right mt-3 mr-1"
                  data-dismiss="modal"
                >Thêm</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div
        class="modal fade"
        id="chinhSuaQuangCao"
        tabindex="-1"
        role="dialog"
        aria-labelledby="chinhSuaQuangCaoLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h4 class="modal-title" id="chinhSuaQuangCaoLabel">Chỉnh sửa bảng
                quảng cáo</h4>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h6 class="mt-1 text-center font-italic opacity-50">Lưu ý: Để
                trống nếu không chỉnh sửa</h6>
              <!-- Your form goes here -->
              <form>
                <div class="form-group">
                  <label for="loaiBang" class="mt-auto">
                    <h6>Loại bảng</h6>
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="loaiBang"
                    placeholder="Nhập loại bảng (vd: Trụ/Cụm pano)"
                  />

                  <label for="kichThuoc" class="mt-3">
                    <h6>Kích thước</h6>
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="kichThuoc"
                    placeholder="Nhập kích thước (vd: 2.5m x 10m)"
                  />

                  <label for="hinhAnh" class="mt-3">
                    <h6>Hình Ảnh</h6>
                  </label>
                  <div class="container mt-3 mb-3">
                    <button
                      type="button"
                      class="btn btn-primary float-start"
                      id="hinhAnh"
                    >
                      <i class="bi bi-image"></i>
                      Thêm hình ảnh
                    </button>
                  </div>

                </div>

                <button
                  type="button"
                  class="btn btn-secondary float-right mt-3"
                  data-dismiss="modal"
                >Hủy</button>
                <button
                  type="submit"
                  class="btn btn-primary float-right mt-3 mr-1"
                  data-dismiss="modal"
                >Thêm</button>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <table class="table table-bordered">
      <h2 class="text-center">Danh sách bảng quảng cáo</h2>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-success float-right mb-2"
        data-toggle="modal"
        data-target="#themQuangCao"
      >
        <i class="bi bi-plus-square"></i>
        Thêm
      </button>
      <thead class="custom-header">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Loại bảng</th>
          <th scope="col">Địa chỉ</th>
          <th scope="col">Khu vực</th>
          <th scope="col">Kích thước</th>
          <th scope="col">Hình thức</th>
          <th scope="col">Phân loại</th>
          <th scope="col">Tình trạng</th>
          <th scope="col">Vị trí</th>
          <th scope="col">Hình ảnh</th>
          <th scope="col">Thao tác</th>
        </tr>
      </thead>
      <tbody>
        {{#each adboards}}
          <tr>
            <td scope="row">{{showIndex @index}}</td>
            <td>{{this.properties.boardType}}</td>
            <td>{{this.location.address}}</td>
            <td>{{this.ward.name}} - {{this.district.name}}</td>
            <td>{{this.properties.size}}</td>
            <td>{{this.location.adFormat}}</td>
            <td>{{this.location.locationType}}</td>
            <td>{{this.location.status}}</td>
            <td> <a href="">Chi tiết</a></td>
            <td> <a href="">Xem</a></td>
            <td>
              <button class="btn">
                <i class="bi bi-trash-fill text-danger"></i>
              </button>
              <button
                class="btn"
                data-toggle="modal"
                data-target="#chinhSuaQuangCao"
              >
                <i class="bi bi-pencil-square text-secondary"></i>
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</main>