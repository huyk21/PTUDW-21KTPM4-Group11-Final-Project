<!-- Navigation bar goes here -->
<header class="container-fluid bg-primary py-3">
  <nav class="navbar navbar-expand-sm navbar-dark container">
    <div class="container">
      <a class="navbar-brand" href="/"><i
          class="bi bi-house fs-3 align-self-center"
        ></i>&nbsp; Quản lý điểm đặt quảng cáo & bảng quảng cáo</a>
      <button
        class="navbar-toggler d-lg-none"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapsibleNavId"
        aria-controls="collapsibleNavId"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <!-- Redirecting navigations go here -->
      <div class="collapse navbar-collapse" id="collapsibleNavId">
        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
          <li class="nav-item">
            <a class="nav-link active" href="/" aria-current="page">Trang chủ
              <span class="visually-hidden">(current)</span></a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="dropdownId"
              data-bs-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >Các chức năng khác</a>
            <div class="dropdown-menu" aria-labelledby="dropdownId">
              <a class="dropdown-item" href="/api/quan/report">Xử lý báo cáo</a>
              <a class="dropdown-item" href="/api/quan/license">Yêu cầu cấp phép quảng
                cáo</a>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<!-- The body goes here -->
<main>
  <!-- Card header -->
  <div class="card text-center">
    <div class="card-header">
      <h4 class="card-title text-left">
        Thông tin điểm đặt quảng cáo, biển quảng cáo của khu vực
        {{ward.name}},
        {{district.name}}
      </h4>
    </div>
    <!-- Card Body -->
    <div class="card-body">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a class="nav-link active fw-bold" aria-current="true" href="#">Tất cả</a>
        </li>
        <li class="nav-item">
          <a class="nav-link fw-semibold" href="#">Điểm đặt</a>
        </li>
        <li class="nav-item">
          <a class="nav-link fw-semibold" href="#" tabindex="-1">Biển quảng cáo</a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Search bar goes here -->
  <div
    class="container-fluid d-flex flex-row justify-content-between align-items-center bg-dark bg-opacity-10"
  >
    <div class="mb-3">
      <label for="billboard-search" class="form-label fw-bold">Tìm điểm đặt/biển
        quảng cáo</label>
      <input
        type="text"
        class="form-control"
        name="billboard-search"
        id="billboard-search"
        aria-describedby="helpId"
        placeholder="Tìm thông tin về điểm đặt, biển quảng cáo"
      />
      <small
        id="helpId"
        class="form-text text-muted fw-semibold fst-italic"
      >Nhập thông tin bất kỳ của điểm đặt, biển quảng cáo để tìm kiếm</small>
    </div>
    <a
      name="filter"
      id="filter"
      class="btn btn-primary bg-light bg-opacity-100"
      href="#"
      role="button"
    ><i class="bi bi-funnel"></i></a>
  </div>

  <!-- Table containing the information of ad boards goes here -->
  <div class="container-fluid table-responsive" id="info-table">
    <table
      class="table table-striped table-hover table-borderless table-light align-middle"
    >
      <thead class="table-light opacity-100">
        <tr>
          <th>Loại bảng</th>
          <th>Địa chỉ</th>
          <th>Khu vực</th>
          <th>Kích thước</th>
          <th>Số lượng</th>
          <th>Hình thức</th>
          <th>Phân loại</th>
          <th>Tình trạng</th>
          <th>Thao tác</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        {{#each adboardDetails}}
          <tr class="table-light opacity-100">
            <td scope="row">{{adboard.properties.boardType}}</td>
            <td>{{locationDetails.address}}</td>
            <td>{{wardDetail.name}} - {{districtDetails.name}}</td>
            <td>{{adboard.properties.size}}</td>
            <td>{{adboard.properties.quantity}}</td>
            <td>{{locationDetails.adFormat}}</td>
            <td>{{locationDetails.locationType}}</td>
            <td>{{locationDetails.status}}</td>
            <td>
              <a
                name="edit"
                id="edit"
                class="btn {{#eq locationDetails.status 'ĐÃ CẤP PHÉP' 'BỊ BÁO CÁO'}}btn-success  {{else}} btn-light active disabled {{/eq}}"
                href="/api/quan/adManager/{{adboard._id}}"
                role="button"
                {{!-- data-bs-toggle="modal"
                data-bs-target="#adConfig" --}}
              >Chỉnh sửa</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Modal for adjusting ad information -->
  <!-- if you want to close by clicking outside the modal, delete the last endpoint:data-bs-backdrop and data-bs-keyboard -->
  <div
    class="modal fade"
    id="adConfig"
    tabindex="-1"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    role="dialog"
    aria-labelledby="modalTitleId"
    aria-hidden="true"
  >
    <div
      class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg"
      role="document"
    >
      <div class="modal-content">
        <!-- Modal header -->
        <div class="modal-header">
          <h5 class="modal-title fw-bold" id="modalTitleId">
            Chỉnh sửa điểm đặt/bảng quảng cáo
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
          <form
            method="POST"
            action="/api/adManager/store"
            class="d-flex flex-row flex-wrap justify-content-between align-content-center m-0"
            id="boardAdjust"
          >
            <div class="mb-3">
              <label for="id" class="form-label fw-bold">ID</label>
              <input
                type="text"
                name="id"
                id="id"
                class="form-control"
                {{!-- placeholder="Vd: Trụ bảng hiflex, Cổng chào..." --}}
                value="{{result.adboard._id}}"
                readonly
                aria-describedby="helpId"
                
              />
            </div>
            <div class="mb-3">
              <label for="boardType" class="form-label fw-bold">Loại bảng</label>
              <input
                type="text"
                name="boardType"
                id="boardType"
                class="form-control"
                {{!-- placeholder="Vd: Trụ bảng hiflex, Cổng chào..." --}}
                value="{{result.adboard.properties.boardType}}"
                readonly
                aria-describedby="helpId"
                
              />
            </div>
            <div class="mb-3">
              <label for="address" class="form-label fw-bold">Địa chỉ</label>
              <input
                type="text"
                name="address"
                id="address"
                class="form-control"
                value="{{result.locationDetails.address}}"
                readonly
                aria-describedby="helpId"
              />
            </div>
            <div class="mb-3">
              <label for="area" class="form-label fw-bold">Khu vực</label>
              <input
                type="text"
                name="area"
                id="area"
                class="form-control"
                value="{{result.wardDetail.name}} - {{result.districtDetails.name}}"
                readonly
                aria-describedby="helpId"
              />
            </div>
            <div class="mb-3">
              <label for="size" class="form-label fw-bold">Kích thước</label>
              <input
                type="text"
                name="size"
                id="size"
                class="form-control"
                value="{{result.adboard.properties.size}}"
                readonly
                aria-describedby="helpId"
              />
            </div>
            <div class="mb-3">
              <label for="quantity" class="form-label fw-bold">Số lượng</label>
              <input
                type="text"
                name="quantity"
                id="quantity"
                class="form-control"
                value="{{result.adboard.properties.quantity}}"
                readonly
                aria-describedby="helpId"
              />
            </div>
            <div class="mb-3">
              <label for="adFormat" class="form-label fw-bold">Hình thức</label>
              <input
                type="text"
                name="adFormat"
                id="adFormat"
                class="form-control"
                value="{{result.locationDetails.adFormat}}"
                readonly
                aria-describedby="helpId"
              />
            </div>
            <div class="mb-3">
              <label for="locationType" class="form-label fw-bold">Loại vị trí</label>
              <input
                type="text"
                name="locationType"
                id="locationType"
                class="form-control"
                value="{{result.locationDetails.locationType}}"
                readonly
                aria-describedby="helpId"
              />
            </div>
            <div class="mb-3">
              <label for="time" class="form-label fw-bold">Thời điểm xin chỉnh
                sửa</label>
              <input
                type="date"
                name="time"
                id="time"
                class="form-control"
                placeholder=""
                aria-describedby="helpId"
                required
              />
            </div>
            <div class="mb-3">
              <label for="reason" class="form-label fw-bold">Lý do chỉnh sửa</label>
              <input
                type="text"
                name="reason"
                id="reason"
                class="form-control"
                placeholder="Vd: Sai nội dung..."
                aria-describedby="helpId"
                re
              />
            </div>
          </form>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            <i class="bi bi-x"></i>&nbsp; Hủy
          </button>
          <button type="submit" class="btn btn-primary" form="boardAdjust">
            <i class="bi bi-send"></i>
            &nbsp;Gửi
          </button>
        </div>
      </div>
    </div>
  </div>
</main>

<footer>
  <!-- place footer here -->
</footer>