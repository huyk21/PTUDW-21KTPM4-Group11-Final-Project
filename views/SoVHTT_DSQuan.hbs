<main>
  <div class="container">

    <table class="table table-bordered">
      <h2 class="text-center">Danh sách Quận</h2>
      <!-- Button trigger modal -->
      <a
        class="btn btn-success float-right mb-2"
        id="add"
        name="add"
        href="/api/sovhtt/danh-sach-quan/addDistrict"
        role="button"
      >
        <i class="bi bi-person-plus"></i>
        Thêm
      </a>

      <thead class="custom-header">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Tên quận</th>
          <th scope="col">Số lượng phường</th>
          <th scope="col">Số lượng điểm đặt</th>
          <th scope="col">Chi tiết</th>
        </tr>
      </thead>
      <tbody>
        {{#each districts}}
          <tr>
            <td scope="row">{{showIndex @index}}</td>
            <td>{{this.name}}</td>
            <td>{{this.numberOfWards}}</td>
            <td>{{this.numberOfLocations}}</td>
            <!--Calculate the number of locations to put here-->
            <td>
              <a href="/api/sovhtt/danh-sach-phuong/{{this._id}}">Chi tiết
                <i class="bi bi-info-circle"></i></a>
            </td>
            <td>
              <a
                href="#"
                class="pe-auto"
                data-toggle="modal"
                data-target="#xoaQuanModal"
                data-id="{{this._id}}"
              >
                <i class="bi bi-trash-fill float-end text-danger pe-auto"></i>
              </a>
            </td>
            <td>
              <a
                name="edit"
                href="/api/sovhtt/danh-sach-quan/editDistrict/{{this._id}}"
                class="text-secondary float-end pe-auto"
                {{! data-toggle="modal"
                data-target="#chinhSuaQuan" }}
                id="edit"
                role="button"
              >
                <i class="bi bi-pencil-square"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

