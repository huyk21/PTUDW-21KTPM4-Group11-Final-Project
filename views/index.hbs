    <!-- Map area -->
    <div class="col-md-12">
      <div id="map" style="height: 100vh; width: 100vw">
        <!-- Report Modal -->

        <div
          class="modal fade"
          id="reportModal"
          tabindex="-1"
          aria-labelledby="reportModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="reportModalLabel">
                  Nội Dung Báo Cáo
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form
                  id="reportForm"
                  type="submit"
                  onsubmit="submitFormHandler(event)"
                >
                  <!-- Personal Information -->
                  <div class="mb-3">
                    <label for="full-name" class="form-label">Họ và tên</label>
                    <input
                      type="text"
                      class="form-control"
                      id="full-name"
                      placeholder="Họ và tên"
                      name="name"
                      required
                    />
                  </div>

                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      placeholder="you@company.com"
                      name="email"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label for="phone-number" class="form-label">Số điện thoại</label>
                    <div class="input-group">
                      <span class="input-group-text" id="country-code">VN +84</span>
                      <input
                        type="tel"
                        class="form-control"
                        id="phone-number"
                        placeholder="Số điện thoại"
                        name="phoneNumber"
                        required
                      />
                    </div>
                  </div>
                  <!-- Report Type -->
                  <div class="mb-3">
                    <label for="report-type" class="form-label">Hình thức báo
                      cáo</label>
                    <select
                      class="form-select"
                      id="report-type"
                      name="reportType"
                      required
                    >
                      <option value="Tố giác sai phạm">Tố giác sai phạm</option>
                      <option value="Đăng ký nội dung">Đăng ký nội dung</option>
                      <option value="Đóng góp ý kiến">Đóng góp ý kiến</option>
                      <option value="Giải đáp thắc mắc">Giải đáp thắc mắc</option>
                    </select>
                  </div>

                  <!-- Report Content -->
                  <!-- WYSIWYG Editor for Report Content -->
                  <div class="mb-3">
                    <label
                      for="report-content"
                      class="form-label"
                      name="reportContent"
                    >Nội dung báo cáo</label>

                    <textarea
                      class="form-control"
                      id="report-content"
                      rows="3"
                      placeholder="Nội dung báo cáo"
                      required
                      name="reportContent"
                    ></textarea>
                  </div>

                  <!-- Captcha -->
                  <div class="mb-3">
                    <button
                      type="button"
                      class="btn btn-primary btn-lg btn-block"
                      id="captchaButton"
                    >
                      Xác nhận Captcha
                    </button>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                  id="closeReportFormButton"
                >
                  Close
                </button>
                <button
                  type="submit"
                  class="btn btn-primary"
                  form="reportForm"
                  id="submitButton"
                  disabled
                >
                  Gửi báo cáo
                </button>
              </div>
            </div>
          </div>
        </div>
        <div
          id="extension"
          class="d-flex flex-column justify-content-center align-items-center sidebar-container"
        >
          <button id="toggleSidebarButton" class="btn btn-sm m-1">☰</button>
          <button
